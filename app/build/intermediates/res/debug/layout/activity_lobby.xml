<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LobbyActivity">

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_lobby"
        android:id="@+id/exitButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:id="@+id/startButton"
        android:layout_toEndOf="@+id/timeLimitText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/timeLimitText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Radius: "
        android:layout_toEndOf="@+id/exitButton"
        android:layout_toRightOf="@+id/exitButton"
        android:id="@+id/gameRadiusText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="300"
        android:id="@+id/gameRadius"
        android:layout_alignTop="@+id/gameRadiusText"
        android:layout_toEndOf="@+id/gameRadiusText"
        android:layout_toRightOf="@+id/gameRadiusText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tag Radius: "
        android:id="@+id/tagRadiusText"
        android:layout_above="@+id/gameRadiusText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10"
        android:id="@+id/tagRadius"
        android:layout_above="@+id/gameRadius"
        android:layout_alignStart="@+id/gameRadius"
        android:layout_alignLeft="@+id/gameRadius"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tag Limit: "
        android:id="@+id/tagLimitText"
        android:layout_above="@+id/gameRadius"
        android:layout_toEndOf="@+id/gameRadius"
        android:layout_toRightOf="@+id/gameRadius"
        android:layout_marginLeft="23dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time Limit: "
        android:id="@+id/timeLimitText"
        android:layout_alignBottom="@+id/gameRadius"
        android:layout_alignStart="@+id/tagLimitText"
        android:layout_alignLeft="@+id/tagLimitText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5"
        android:id="@+id/tagLimit"
        android:layout_above="@+id/timeLimitText"
        android:layout_toEndOf="@+id/timeLimitText"
        android:layout_toRightOf="@+id/timeLimitText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="240"
        android:id="@+id/timeLimit"
        android:layout_alignBottom="@+id/timeLimitText"
        android:layout_toEndOf="@+id/timeLimitText"
        android:layout_toRightOf="@+id/timeLimitText"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerList"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/exitButton"
        android:layout_above="@+id/tagRadiusText" />


</RelativeLayout><!-- From: file:/C:/Users/Owner/AndroidstudioProjects/TagPi2/app/src/main/res/layout/activity_lobby.xml -->